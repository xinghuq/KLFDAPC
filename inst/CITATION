citHeader("To cite KLFDAPC in publications use:")

website <- "http://github.com/xinghuq/KLFDAPC"
year    <- sub("-.*","",meta$Date)
version <- sprintf("R package version %s",meta$Version)

citEntry(entry = "Manual",
  title  = "{KLFDAPC}: KLFDAPC: Kernel Local Fisher Discriminant Analysis of Principal Components- A Non-linear Tool for Population Structure Inference",
  author = personList(as.person("Xinghu Qin"),
                      as.person("Oscar Gaggiotti"),
                      as.person("Charleston Chiang")),
  year   = year,
  note   = version,
  url    = website,

  textVersion =
    paste("Xinghu Qin, Oscar Gaggiotti, Charleston Chiang",
          "2020. KLFDAPC: Kernel Local Fisher Discriminant Analysis of Principal Components ",
          "A Non-linear Tool for Population Structure Inference. ",version,". ",website,sep="")
)