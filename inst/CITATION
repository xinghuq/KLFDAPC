citHeader("To cite KLFDAPC in publications use:")

website <- "http://github.com/xinghuq/KLFDAPC"
year    <- sub("-.*","",meta$Date)
version <- sprintf("R package version %s",meta$Version)

citEntry(entry = "Manual",
  title  = "{KLFDAPC}: Qin, X., Gaggiotti, OE., Chiang, C. 2020. Kernel Local Fisher Discriminant Analysis of Principal Components (KLFDAPC) significantly improves the accuracy of predicting geographic origin of individuals",
  author = personList(as.person("Xinghu Qin"),
                      as.person("Oscar Gaggiotti"),
                      as.person("Charleston Chiang")),
  year   = year,
  note   = version,
  url    = website,

  textVersion =
    paste("Qin Xinghu, Gaggiotti Oscar , Chiang Charleston. ",
          " 2020. Qin, X., Gaggiotti, OE., Chiang, C. 2020. Kernel Local Fisher Discriminant Analysis of Principal Components (KLFDAPC) significantly improves the accuracy of predicting geographic origin of individuals ", "  ",version,". ",website,sep="")
)
